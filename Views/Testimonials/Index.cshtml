@using HotelManagements.Models;
@model HotelManagements.Models.TDanhGium

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<title>Five Star Hotel | Testimonials</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="~/css/style.css" rel="stylesheet" type="text/css" />
<link href="~/css/layout.css" rel="stylesheet" type="text/css" />
<script src="~/js/maxheight.js" type="text/javascript"></script>
<!--[if lt IE 7]>
<link href="ie_style.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="ie_png.js"></script>
<script type="text/javascript">ie_png.fix('.png, #header .row-2, #header .nav li a, #content, .gallery li');</script>
<![endif]-->
</head>
<body id="page5" onload="new ElementMaxHeight();">
<div id="main">
  <!-- header -->
  <div id="header" class="small">
    <div class="row-1">
      <div class="wrapper">
        <div class="logo">
          <h1><a href="#">Five Star</a></h1>
          <em>Hotel</em> <strong>True Luxury</strong> </div>
        <div class="phones"> 1-800-412-45-56<br />
          1-800-542-64-48 </div>
      </div>
    </div>
    <div class="row-2 alt">
      <div class="indent">
        <!-- header-box-small begin -->
        <div class="header-box-small">
          <div class="inner">
            <ul class="nav">
              <li><a href="/" >Trang chủ</a></li>
              <li><a href="/Service">Dịch vụ</a></li>
              <li><a href="/Gallery">Hình ảnh</a></li>
              <li><a href="/Restaurant">Phòng ăn</a></li>
              <li><a href="/Testimonials" class="current">Đánh Giá</a></li>
              <li><a href="/Booking">Đặt phòng</a></li>
            </ul>
          </div>
        </div>
        <!-- header-box-small end -->
      </div>
    </div>
  </div>
  <!-- content -->
  <div id="content">
    <div class="gallery">
      <ul>
        <li><a href="#"><img alt="" src="~/css/images/2page-img1.jpg" /></a></li>
        <li><a href="#"><img alt="" src="~/css/images/2page-img2.jpg" /></a></li>
        <li><a href="#"><img alt="" src="~/css/images/2page-img3.jpg" /></a></li>
        <li><a href="#"><img alt="" src="~/css/images/2page-img4.jpg" /></a></li>
        <li><a href="#"><img alt="" src="~/css/images/2page-img5.jpg" /></a></li>
        <li><a href="#"><img alt="" src="~/css/images/2page-img6.jpg" /></a></li>
      </ul>
    </div>
    <div class="indent">
      <h2>Customers’ testimonials</h2>
      <ul class="list4">
        @{
            foreach (var item in (List<TDanhGium>)ViewBag.Testimonials)
            {
                <li>
                    <img alt="" src="~/css/images/img-empty.png" class="png" />
                      <h6>@item.NguoiDanhGia, @item.DiaChi</h6>
                      @item.NoiDung
                </li>     
            }
        }
      </ul>
      <form method="post" asp-action="Add">
       <ul class="list4" style="display: grid; grid-template-columns: repeat(2, 1fr); grid-gap: 10px;">
    <li>
        <h6>Nội dung đánh giá</h6>
        <textarea style="width: 300px; height: 70px" asp-for="NoiDung"></textarea>
    </li>
    <li>
        <h6>Tên người đánh giá</h6>
        <input asp-for="NguoiDanhGia" />
    </li>
    <li>
        <h6>Email</h6>
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </li>
    <li>
        <h6>Địa chỉ</h6>
        <input asp-for="DiaChi" />
    </li>
    <li>
        <h6>Vị trí</h6>
        <input type="range" asp-for="ViTri" min="0" max="9" value="5" />
    </li>
    <li>
        <h6>Phục vụ</h6>
        <input type="range" asp-for="PhucVu" min="0" max="9" value="5" />
    </li>
    <li>
        <h6>Tiện nghi</h6>
        <input type="range" asp-for="TienNghi" min="0" max="9" value="5" />
    </li>
    <li>
        <h6>Giá cả</h6>
        <input type="range" asp-for="GiaCa" min="0" max="9" value="5" />
    </li>
    <li>
        <h6>Vệ sinh</h6>
        <input type="range" asp-for="VeSinh" min="0" max="9" value="5" />
    </li>
    <li>
        <h6>Món ăn</h6>
        <input type="range" asp-for="MonAn" min="0" max="9" value="5" />
    </li>
</ul>

      <button type="submit" style="background-color: red; width: 100px; height: 40px">Submit</button>
      </form>
    </div>
  </div>
  <!-- footer -->
  <div id="footer">
    <ul class="nav">
      <li><a href="#">Home</a>|</li>
      <li><a href="#">Services</a>|</li>
      <li><a href="#">Gallery</a>|</li>
      <li><a href="#">Restaurant</a>|</li>
      <li><a href="#">Testimonials</a>|</li>
      <li><a href="#">Booking</a></li>
    </ul>
    <div class="wrapper">
      <div class="fleft">Copyright &copy; 2009 <a href="#">Name Here</a>. All Rights Reserved</div>
      <div class="fright">Designed by TemplateMonster - <a href="http://www.templatemonster.com/">website templates</a> provider</div>
    </div>
  </div>
</div>
</body>
</html>
